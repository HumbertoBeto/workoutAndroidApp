<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Change Theme"
        android:id="@+id/changeTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/saveButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="saveClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark"
        android:id="@+id/darkButton"
        android:layout_alignTop="@+id/changeTheme"
        android:layout_toRightOf="@+id/changeTheme"
        android:layout_toEndOf="@+id/changeTheme"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:onClick="darkButtonClicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:id="@+id/lightButton"
        android:layout_alignTop="@+id/darkButton"
        android:layout_toRightOf="@+id/darkButton"
        android:layout_toEndOf="@+id/darkButton"
        android:layout_marginLeft="20dp"
        android:onClick="lightButtonClicked" />
</RelativeLayout>